<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WpfApplication2" xmlns:bgus="clr-namespace:BGU.DRPL.SignificantOwnership.Core.Spares;assembly=BGU.DRPL.SignificantOwnership.Core" xmlns:bgusd="clr-namespace:BGU.DRPL.SignificantOwnership.Core.Spares.Data;assembly=BGU.DRPL.SignificantOwnership.Core, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" xmlns:bguq="clr-namespace:BGU.DRPL.SignificantOwnership.Core.Questionnaires;assembly=BGU.DRPL.SignificantOwnership.Core" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:window="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration" xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Styles.xaml" />
    <ResourceDictionary Source="Converters.xaml" />
    <ResourceDictionary Source="CourtInfo_AutoGenTemplate.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <DataTemplate DataType="{x:Type bgusd:CourtDecisionInfo}">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Expander Grid.Row="0" Header="Court" ToolTip="Court" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" xmlns="">
        <ContentControl Content="{Binding Court}" Margin="5,2" />
      </Expander>
      <TextBlock Grid.Row="1" Text="DecisionType" Style="{StaticResource dispNmStyle}" xmlns="" />
      <ComboBox Grid.Row="2" ToolTip="DecisionType" ItemsSource="{Binding Source={x:Static bgus:EnumsLister.CourtDecisionTypeList}, Mode=OneWay}" SelectedValue="{Binding DecisionType}" DisplayMemberPath="Value" SelectedValuePath="EnumValue" HorizontalAlignment="Stretch" xmlns="" />
      <TextBlock Grid.Row="3" Text="DecisionDate" Style="{StaticResource dispNmStyle}" ToolTip="DecisionDate" xmlns="" />
      <DatePicker Grid.Row="4" ToolTip="DecisionDate" Style="{StaticResource dtEdStyle}" SelectedDate="{Binding DecisionDate}" xmlns="" />
      <TextBlock Grid.Row="5" Text="DecisionText" Style="{StaticResource dispNmStyle}" ToolTip="DecisionText" xmlns="" />
      <TextBox Grid.Row="6" Style="{StaticResource txtEdStyle}" Text="{Binding DecisionText}" ToolTip="DecisionText" xmlns="" />
    </Grid>
  </DataTemplate>
</ResourceDictionary>