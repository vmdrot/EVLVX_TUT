                  <Binding Path="DataContext" ElementName="gridAttachments" />
                  <Binding Path="Attachments" />
                  <Binding ElementName="gridAttachments" />
                  <Binding ElementName="expAttachments" Path="Header" />
                  <Binding ElementName="expAttachments" Path="ToolTip" />
                </MultiBinding>
              </Button.CommandParameter>
            </Button>
            <Button HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource addNewRowBtnStyle}" Command="{x:Static local:MyCommands.RefreshDataGridCommand}" Tag="Attachments" Background="White" ToolTip="освіжити записи">
              <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/refresh_btn.png" Tag="Attachments" />
