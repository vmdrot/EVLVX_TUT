    <ResourceDictionary Source="BankingLicensedActivityInfo_AutoGenTemplate.xaml" />
    <ResourceDictionary Source="ContactInfo_AutoGenTemplate.xaml" />
    <ResourceDictionary Source="AttachmentInfo_AutoGenTemplate.xaml" />
    <ResourceDictionary Source="SignatoryInfo_AutoGenTemplate.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <DataTemplate DataType="{x:Type bguq:RegLicAppx14NewSvc}">
    <StackPanel>
      <TextBlock Text="Дата заявки" Style="{StaticResource dispNmStyle}" ToolTip="Дата" Tag="QuestDate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <DatePicker ToolTip="Дата" Style="{StaticResource dtEdStyle}" SelectedDate="{Binding QuestDate, diag:PresentationTraceSources.TraceLevel=High}" Tag="QuestDate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBlock Text="№ (Ваш висх.)" Style="{StaticResource dispNmStyle}" ToolTip="номер" Tag="Ref" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBox Style="{StaticResource txtEdStyle}" Text="{Binding Ref, diag:PresentationTraceSources.TraceLevel=High}" ToolTip="номер" Tag="Ref" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <StackPanel Orientation="Vertical" Tag="BankRef" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock x:Name="lblBankRef" Height="auto" Width="auto" Text="Банк (назва та ін. реквізити)" Style="{StaticResource dispNmStyle}" ToolTip="Ідентифікація банку, що подає заявку" Tag="BankRef" />
        <StackPanel Orientation="Horizontal">
          <ComboBox x:Name="cbxBankRef" DisplayMemberPath="Name" HorizontalAlignment="Stretch" ToolTip="Ідентифікація банку, що подає заявку" MinWidth="150" ItemsSource="{Binding Source={x:Static localdata:DataModule.СurrentBanks}, Mode=OneWay, diag:PresentationTraceSources.TraceLevel=High}" Tag="BankRef" SelectedItem="{Binding Path=BankRef, Mode=TwoWay, diag:PresentationTraceSources.TraceLevel=High}" Width="250">
            <ComboBox.ItemContainerStyle>
              <Style>
                <Setter Property="Control.ToolTip" Value="{Binding MFO}" />
              </Style>
            </ComboBox.ItemContainerStyle>
          </ComboBox>
          <Button x:Name="btnAddBankRef" Command="{x:Static local:MyCommands.AddBankCommand}" Style="{StaticResource addNewRowBtnStyle}" Tag="BankRef" Height="27" Width="27" Background="White" ToolTip="додати новий до списку">
            <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/add_btn_27.png" Tag="BankRef" />
            <Button.CommandParameter>
              <MultiBinding Converter="{StaticResource multiValConv}">
                <Binding ElementName="cbxBankRef" />
              </MultiBinding>
            </Button.CommandParameter>
          </Button>
          <Button x:Name="btnRefreshBankRef" Command="{x:Static local:MyCommands.RefreshComboCommand}" Style="{StaticResource addNewRowBtnStyle}" Tag="BankRef" Height="27" Width="27" Background="White" ToolTip="освіжити список">
            <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/refresh_btn_27.png" Tag="BankRef" />
            <Button.CommandParameter>
              <MultiBinding Converter="{StaticResource multiValConv}">
                <Binding ElementName="cbxBankRef" />
              </MultiBinding>
            </Button.CommandParameter>
          </Button>
        </StackPanel>
      </StackPanel>
      <Expander Header="Діюча банківська ліцензія (реквізити)" ToolTip="має  банківську ліцензію" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" Tag="ExistingLicenseSpecs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <ContentControl Content="{Binding ExistingLicenseSpecs, diag:PresentationTraceSources.TraceLevel=High}" Margin="5,2" Tag="ExistingLicenseSpecs" />
      </Expander>
      <Expander x:Name="expNewActivitiesList" Header="Перелік нових видів фінпослуг" ToolTip="перелік нових видів діяльності або нових видів фінансових послуг" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" Tag="NewActivitiesList" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" Orientation="Vertical">
          <DataGrid x:Name="gridNewActivitiesList" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding NewActivitiesList, diag:PresentationTraceSources.TraceLevel=High}" AutoGenerateColumns="False" Tag="NewActivitiesList" Margin="3,0">
            <i:Interaction.Behaviors>
              <localcmds:KeyUpWithArgsBehavior KeyUpCommand="{x:Static local:MyCommands.DataGridKeyUpCommand}" />
            </i:Interaction.Behaviors>
            <DataGrid.Columns>
              <DataGridTextColumn Binding="{Binding Path=ActivityType, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Вид банківської діяльності" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Вид банківської діяльності зг. зі ст.47 з-ну про Банки й банківську діяльність" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTextColumn Binding="{Binding Path=ServiceType, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Вид фінансових послуг" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Вид фінансових послуг зг. зі ст. 4 з-ну Про фінансові послуги" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTextColumn Binding="{Binding Path=ActivityName, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Вид діяльності - власна інтерпретація" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Власна назва та/або опис виду діяльності" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTemplateColumn Header="дії" Width="75" TextBlock.TextAlignment="Center" HeaderStyle="{StaticResource dgBtnsColHdr}">
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                      <Button Command="{x:Static local:MyCommands.EditRowCommand}" ToolTip="редагувати рядок" Background="White">
                        <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/edit_btn.png" Width="20" Height="20" />
                        <Button.CommandParameter>
                          <MultiBinding Converter="{StaticResource multiValConv}">
                            <Binding Path="SelectedItem" ElementName="gridNewActivitiesList" />
                            <Binding ElementName="gridNewActivitiesList" />
                            <Binding ElementName="expNewActivitiesList" Path="Header" />
                            <Binding ElementName="expNewActivitiesList" Path="ToolTip" />
                          </MultiBinding>
                        </Button.CommandParameter>
                      </Button>
                      <Button Command="{x:Static local:MyCommands.DeleteRowCommand}" ToolTip="видалити рядок" Background="White">
                        <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/del_btn.jpg" />
                        <Button.CommandParameter>
                          <MultiBinding Converter="{StaticResource multiValConv}">
                            <Binding Path="SelectedItem" ElementName="gridNewActivitiesList" />
                            <Binding Path="SelectedIndex" ElementName="gridNewActivitiesList" />
                            <Binding ElementName="gridNewActivitiesList" />
                          </MultiBinding>
                        </Button.CommandParameter>
                      </Button>
                    </StackPanel>
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
            </DataGrid.Columns>
          </DataGrid>
          <StackPanel Orientation="Horizontal" Margin="3,5">
            <Button HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource addNewRowBtnStyle}" Command="{x:Static local:MyCommands.AddNewRowCommand}" Tag="NewActivitiesList" Background="White" ToolTip="додати новий запис">
              <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/add_btn.png" Tag="NewActivitiesList" />
              <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource multiValConv}">
                  <Binding Path="ItemsSource" ElementName="gridNewActivitiesList" />
                  <Binding Path="DataContext" ElementName="gridNewActivitiesList" />
                  <Binding Path="NewActivitiesList" />
                  <Binding ElementName="gridNewActivitiesList" />
                  <Binding ElementName="expNewActivitiesList" Path="Header" />
                  <Binding ElementName="expNewActivitiesList" Path="ToolTip" />
                </MultiBinding>
              </Button.CommandParameter>
            </Button>
            <Button HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource addNewRowBtnStyle}" Command="{x:Static local:MyCommands.RefreshDataGridCommand}" Tag="NewActivitiesList" Background="White" ToolTip="освіжити записи">
              <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/refresh_btn.png" Tag="NewActivitiesList" />
              <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource multiValConv}">
                  <Binding ElementName="gridNewActivitiesList" />
                </MultiBinding>
              </Button.CommandParameter>
            </Button>
          </StackPanel>
        </StackPanel>
      </Expander>
      <CheckBox IsChecked="{Binding HasSufficientFinancialCapacity, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="HasSufficientFinancialCapacity" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Фінансові можливості наявні?" ToolTip="Банк має достатні фінансові  можливості  для  початку  нового виду діяльності та/або виду фінансових послуг,  зазначених у цьому повідомленні" Tag="HasSufficientFinancialCapacity" />
      </CheckBox>
      <TextBlock Text="Тривалість беззбиткового періоду (міс.)" Style="{StaticResource dispNmStyle}" Tag="MonthsWOLosses" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBox Style="{StaticResource txtEdStyle}" Text="{Binding MonthsWOLosses, diag:PresentationTraceSources.TraceLevel=High}" ToolTip="Банк не має збитків протягом останніх ... місяців" Tag="MonthsWOLosses" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <CheckBox IsChecked="{Binding HasFormedEnoughFundsAndReserves, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="HasFormedEnoughFundsAndReserves" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Формування фондів та резервів відповідає/не відповідає...?" ToolTip="Банк сформував фонди та резерви відповідно до вимог законодавства України, у тому числі нормативно-правових актів Національного банку України" Tag="HasFormedEnoughFundsAndReserves" />
      </CheckBox>
      <TextBlock Text="Тривалість дотримування нормативів обов'язвкового резервування (міс.)" Style="{StaticResource dispNmStyle}" Tag="MonthsObligatoryReservesMet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBox Style="{StaticResource txtEdStyle}" Text="{Binding MonthsObligatoryReservesMet, diag:PresentationTraceSources.TraceLevel=High}" ToolTip="Банк дотримується нормативу обов'язкового резервування протягом останніх ... місяців" Tag="MonthsObligatoryReservesMet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBlock Text="Тривалість дотримування економічних нормативів (міс.)" Style="{StaticResource dispNmStyle}" Tag="MonthsEconomicNormativesReqsMet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBox Style="{StaticResource txtEdStyle}" Text="{Binding MonthsEconomicNormativesReqsMet, diag:PresentationTraceSources.TraceLevel=High}" ToolTip="Банк дотримується економічних нормативів протягом останніх ... місяців" Tag="MonthsEconomicNormativesReqsMet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <CheckBox IsChecked="{Binding IsRegulatoryCapitalReqsMet, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsRegulatoryCapitalReqsMet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Регулятивного капіталу достатньо (так/ні)?" ToolTip="Рівень регулятивного капіталу Банку відповідає вимогам Національного банку України" Tag="IsRegulatoryCapitalReqsMet" />
      </CheckBox>
      <TextBlock Text="Розміри регулятивного капіталу (грн.)" Style="{StaticResource dispNmStyle}" ToolTip="Рівень регулятивного капіталу Банку становить ... грн." Tag="RegulatoryCapitalAmt" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBox Style="{StaticResource txtEdStyle}" Text="{Binding RegulatoryCapitalAmt, diag:PresentationTraceSources.TraceLevel=High}" ToolTip="Рівень регулятивного капіталу Банку становить ... грн." Tag="RegulatoryCapitalAmt" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <TextBlock Text="Дата розмірів регулятивного капіталу" Style="{StaticResource dispNmStyle}" ToolTip="Дата, на яку подано рівень регулятивного капіталу Банку (вище)" Tag="RegulatoryCapitalDate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <DatePicker ToolTip="Дата, на яку подано рівень регулятивного капіталу Банку (вище)" Style="{StaticResource dtEdStyle}" SelectedDate="{Binding RegulatoryCapitalDate, diag:PresentationTraceSources.TraceLevel=High}" Tag="RegulatoryCapitalDate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
      <CheckBox IsChecked="{Binding NoPenaltiesWithinLast3Months, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="NoPenaltiesWithinLast3Months" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Відсутність заходів упливу" ToolTip="Банк не є об'єктом застосування заходів впливу (крім письмового застереження) упродовж останніх 3 місяців, причому:&#xA;протягом усього періоду діяльності - для банків, які отримали банківську ліцензію менше ніж за три місяці до часу повідомлення Національного банку України про початок нового виду діяльності та/або виду послуг;&#xA;протягом трьох місяців, що передують часу повідомлення Національного банку України про початок нового виду діяльності та/або виду послуг - для банків, які здійснюють банківську діяльність на підставі банківської ліцензії більше ніж три місяці." Tag="NoPenaltiesWithinLast3Months" />
      </CheckBox>
      <CheckBox IsChecked="{Binding HasDeptsAllocatedForNewBusLines, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="HasDeptsAllocatedForNewBusLines" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Забезпеченість відповідним персоналом та структурою" ToolTip="У Банку створено відповідні підрозділи, що здійснюватимуть зазначений в повідомленні новий вид діяльності та/або вид фінансових послуг, а також підрозділ внутрішнього аудиту та підрозділ з управління ризиками, функції та повноваження яких відповідають вимогам Закону України &quot;Про банки і банківську діяльність&quot; та нормативно-правових актів Національного банку України. Банк забезпечений спеціалістами, які відповідають вимогам нормативно-правових актів Національного банку України. Відповідні відомості додаються." Tag="HasDeptsAllocatedForNewBusLines" />
      </CheckBox>
      <CheckBox IsChecked="{Binding HasFacilitiesForNewBusLines, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="HasFacilitiesForNewBusLines" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Забезпеченість відповідним обладнанням, технікою, ПЗ, тощо" ToolTip="Банк забезпечений належним банківським обладнанням, комп'ютерною технікою, програмним забезпеченням та комунікаційними засобами, що відповідають вимогам Національного банку України" Tag="HasFacilitiesForNewBusLines" />
      </CheckBox>
      <CheckBox IsChecked="{Binding IsGenericLawReqsMetForNewBusLines, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsGenericLawReqsMetForNewBusLines" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Дотримано вимог законодавства" ToolTip="Банком виконано спеціальні вимоги законодавства України, у тому числі нормативно-правових актів Національного банку України, щодо нового виду діяльності та/або нового виду фінансових послуг" Tag="IsGenericLawReqsMetForNewBusLines" />
      </CheckBox>
      <CheckBox IsChecked="{Binding IsBankIndustrySpecificLawReqsMetForNewBusLines, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsBankIndustrySpecificLawReqsMetForNewBusLines" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Готові розпочати новий вид діяльності?" ToolTip="Банк готовий розпочати новий вид діяльності та/або вид фінансових послуг згідно з вимогами банківського законодавства України, нормативно-правових актів Національного банку України" Tag="IsBankIndustrySpecificLawReqsMetForNewBusLines" />
      </CheckBox>
      <CheckBox IsChecked="{Binding IsNewBusLinesPresentInCharter, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsNewBusLinesPresentInCharter" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Нову діяльність зазначено в статуті?" ToolTip="Здійснення нових видів діяльності/надання нових фінансових послуг зазначено в статуті банку." Tag="IsNewBusLinesPresentInCharter" />
      </CheckBox>
      <CheckBox IsChecked="{Binding IsInternalRegulationCopiesAttachedForNewBusLines, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsInternalRegulationCopiesAttachedForNewBusLines" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Наявність внутрішніх положень, що регламентують нову діяльність - є/немає?" ToolTip="Копії внутрішніх положень, що регулюють здійснення банком нових видів діяльності або надання нового виду фінансових  послуг, додаються" Tag="IsInternalRegulationCopiesAttachedForNewBusLines" />
      </CheckBox>
      <CheckBox IsChecked="{Binding IsSigneePersonallyLiableForCopiesAttached, diag:PresentationTraceSources.TraceLevel=High}" FlowDirection="LeftToRight" Tag="IsSigneePersonallyLiableForCopiesAttached" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TextBlock FlowDirection="LeftToRight" Text="Я персонально відповідаю за достовірність поданої інформації?" ToolTip="Я несу персональну відповідальність за достовірність усіх поданих документів" Tag="IsSigneePersonallyLiableForCopiesAttached" />
      </CheckBox>
      <Expander Header="Контакти" ToolTip="У разі виникнення будь-яких питань щодо цього повідомлення або документів, що додаються до нього, прошу звертатися до (прізвище, адреса, номер телефону, факсу)" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" Tag="Contacts" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <ContentControl Content="{Binding Contacts, diag:PresentationTraceSources.TraceLevel=High}" Margin="5,2" Tag="Contacts" />
      </Expander>
      <Expander x:Name="expAttachements" Header="Додатки" ToolTip="Додатки" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" Tag="Attachements" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" Orientation="Vertical">
          <DataGrid x:Name="gridAttachements" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding Attachements, diag:PresentationTraceSources.TraceLevel=High}" AutoGenerateColumns="False" Tag="Attachements" Margin="3,0">
            <i:Interaction.Behaviors>
              <localcmds:KeyUpWithArgsBehavior KeyUpCommand="{x:Static local:MyCommands.DataGridKeyUpCommand}" />
            </i:Interaction.Behaviors>
            <DataGrid.Columns>
              <DataGridTextColumn Binding="{Binding Path=FileName, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Файл" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Файл" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTextColumn Binding="{Binding Path=AttachmentType, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Тип (з переліку)" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Тип додатку із переліку типових долучень; якщо &quot;Інше&quot; - обов'язково вказати, що саме у полі &quot;Опис файлу&quot;." />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTextColumn Binding="{Binding Path=Description, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Опис файлу" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Що у файлі?" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTextColumn Binding="{Binding Path=ContentType, diag:PresentationTraceSources.TraceLevel=High, Mode=TwoWay}" Header="Формат" Width="*" TextBlock.TextAlignment="Center">
                <DataGridTextColumn.HeaderStyle>
                  <Style TargetType="dataprimitives:DataGridColumnHeader">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="TextBlock.VerticalAlignment" Value="Stretch" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="SeparatorBrush" Value="Black" />
                    <Setter Property="ContentTemplate">
                      <Setter.Value>
                        <DataTemplate>
                          <ContentControl Content="{Binding}">
                            <ToolTipService.ToolTip>
                              <ToolTip Content="Тип MIME, напр. pdf, xls, xlsx, doc, docs, rtf, тощо" />
                            </ToolTipService.ToolTip>
                          </ContentControl>
                        </DataTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>
                </DataGridTextColumn.HeaderStyle>
              </DataGridTextColumn>
              <DataGridTemplateColumn Header="дії" Width="75" TextBlock.TextAlignment="Center" HeaderStyle="{StaticResource dgBtnsColHdr}">
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                      <Button Command="{x:Static local:MyCommands.EditRowCommand}" ToolTip="редагувати рядок" Background="White">
                        <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/edit_btn.png" Width="20" Height="20" />
                        <Button.CommandParameter>
                          <MultiBinding Converter="{StaticResource multiValConv}">
                            <Binding Path="SelectedItem" ElementName="gridAttachements" />
                            <Binding ElementName="gridAttachements" />
                            <Binding ElementName="expAttachements" Path="Header" />
                            <Binding ElementName="expAttachements" Path="ToolTip" />
                          </MultiBinding>
                        </Button.CommandParameter>
                      </Button>
                      <Button Command="{x:Static local:MyCommands.DeleteRowCommand}" ToolTip="видалити рядок" Background="White">
                        <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/del_btn.jpg" />
                        <Button.CommandParameter>
                          <MultiBinding Converter="{StaticResource multiValConv}">
                            <Binding Path="SelectedItem" ElementName="gridAttachements" />
                            <Binding Path="SelectedIndex" ElementName="gridAttachements" />
                            <Binding ElementName="gridAttachements" />
                          </MultiBinding>
                        </Button.CommandParameter>
                      </Button>
                    </StackPanel>
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
            </DataGrid.Columns>
          </DataGrid>
          <StackPanel Orientation="Horizontal" Margin="3,5">
            <Button HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource addNewRowBtnStyle}" Command="{x:Static local:MyCommands.AddNewRowCommand}" Tag="Attachements" Background="White" ToolTip="додати новий запис">
              <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/add_btn.png" Tag="Attachements" />
              <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource multiValConv}">
                  <Binding Path="ItemsSource" ElementName="gridAttachements" />
                  <Binding Path="DataContext" ElementName="gridAttachements" />
                  <Binding Path="Attachements" />
                  <Binding ElementName="gridAttachements" />
                  <Binding ElementName="expAttachements" Path="Header" />
                  <Binding ElementName="expAttachements" Path="ToolTip" />
                </MultiBinding>
              </Button.CommandParameter>
            </Button>
            <Button HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" Style="{StaticResource addNewRowBtnStyle}" Command="{x:Static local:MyCommands.RefreshDataGridCommand}" Tag="Attachements" Background="White" ToolTip="освіжити записи">
              <Image Source="pack://application:,,,/WpfApplication2;component/Resources/Icons/refresh_btn.png" Tag="Attachements" />
              <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource multiValConv}">
                  <Binding ElementName="gridAttachements" />
                </MultiBinding>
              </Button.CommandParameter>
            </Button>
          </StackPanel>
        </StackPanel>
      </Expander>
      <Expander Header="Підписант" ToolTip="Інформація про підписанта (Голова правління Банку)" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" IsExpanded="False" Tag="Signee" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <ContentControl Content="{Binding Signee, diag:PresentationTraceSources.TraceLevel=High}" Margin="5,2" Tag="Signee" />
      </Expander>
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>