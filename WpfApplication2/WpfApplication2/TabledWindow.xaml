<Window x:Class="WpfApplication2.TabledWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabledWindow" Height="300" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <SolidColorBrush Color="BlueViolet"></SolidColorBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">фіва</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" >фіва</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2" >фіва</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" >фіва</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" >фіва</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" >фіва</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" >фіва</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" >фіва</TextBlock>
    </Grid>
</Window>
